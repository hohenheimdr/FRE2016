<!---->
<launch>
<!-- apply laser filter for front scan-->
<node pkg="laser_filters" type="scan_to_cloud_filter_chain" output="screen" name="cloud_filter_front">
<remap from="scan" to="/scan_front" />
<remap from="cloud_filtered" to="front_cloud_filtered"/>
<param name="high_fidelity" value="true" />
<param name="target_frame" type="string" value="base_link" />
<rosparam command="load" file="$(find fieldrobot_event2016)/launch/filters/filter_base.yaml" />
</node>

<!-- apply laser filter for back scan -->
<node pkg="laser_filters" type="scan_to_cloud_filter_chain" output="screen" name="cloud_filter_back">
<remap from="scan" to="/scan_back" />
<remap from="cloud_filtered" to="back_cloud_filtered"/>
<param name="high_fidelity" value="true" />
<param name="target_frame" type="string" value="base_link" />
<rosparam command="load" file="$(find fieldrobot_event2016)/launch/filters/filter_base.yaml" />
</node>


</launch>
