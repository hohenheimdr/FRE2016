<!---->
<launch>

<node pkg="laser_scan_matcher" type="laser_scan_matcher_node" name="laser_scan_matcher_node">
	
	<param name="base_frame" value="base_link"/>
	<param name="fixed_frame" value="odom_laser"/>
	<remap from="scan" to="/scan_front"/>
	<param name="use_cloud_input" value="false"/>
	<remap from="cloud" to="/front_cloud_filtered"/>
    	<param name="use_imu"        value="true"/>
	<remap from="imu/data" to="/imu"/>	
	<param name="use_odom"        value="true"/>
	<remap from="odom" to="/odometry"/>
	<param name="publish_tf"        value="false"/>
   	<param name="max_iterations" value="100"/>
	<param name="max_angular_correction_deg" value="2"/>
	<param name="max_linear_correction" value="0.5"/>

	<param name="kf_dist_linear" value="0.03"/>
	<param name="kf_dist_angular" value="0.03"/>
	<param name="restart" value="1"/>
	<param name="use_point_to_line_distance" value="1"/>

	<remap from="pose2D" to="/laser_pose"/>
	<param name="covariance_x" value="0.01"/>
	<param name="covariance_y" value="0.01"/>
	<param name="covariance_z" value="99999"/>
	<param name="covariance_roll" value="99999"/>
	<param name="covariance_pitch" value="99999"/>
	<param name="covariance_yaw" value="99999"/>
  </node>

</launch>
